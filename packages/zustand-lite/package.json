{
  "name": "zustand-lite",
  "version": "1.0.0",
  "description": "Lightweight state management library inspired by Zustand",
  "author": "Askar",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./vanilla": {
      "import": {
        "types": "./dist/vanilla.d.ts",
        "default": "./dist/vanilla.js"
      },
      "require": {
        "types": "./dist/vanilla.d.cts",
        "default": "./dist/vanilla.cjs"
      }
    },
    "./middleware": {
      "import": {
        "types": "./dist/middleware/index.d.ts",
        "default": "./dist/middleware/index.js"
      },
      "require": {
        "types": "./dist/middleware/index.d.cts",
        "default": "./dist/middleware/index.cjs"
      }
    },
    "./middleware/persist": {
      "import": {
        "types": "./dist/middleware/persist.d.ts",
        "default": "./dist/middleware/persist.js"
      },
      "require": {
        "types": "./dist/middleware/persist.d.cts",
        "default": "./dist/middleware/persist.cjs"
      }
    },
    "./middleware/devtools": {
      "import": {
        "types": "./dist/middleware/devtools.d.ts",
        "default": "./dist/middleware/devtools.js"
      },
      "require": {
        "types": "./dist/middleware/devtools.d.cts",
        "default": "./dist/middleware/devtools.cjs"
      }
    },
    "./middleware/immer": {
      "import": {
        "types": "./dist/middleware/immer.d.ts",
        "default": "./dist/middleware/immer.js"
      },
      "require": {
        "types": "./dist/middleware/immer.d.cts",
        "default": "./dist/middleware/immer.cjs"
      }
    },
    "./ssr": {
      "import": {
        "types": "./dist/ssr/index.d.ts",
        "default": "./dist/ssr/index.js"
      },
      "require": {
        "types": "./dist/ssr/index.d.cts",
        "default": "./dist/ssr/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@testing-library/react": "^14.1.0",
    "@types/react": "^18.2.0",
    "@vitest/coverage-v8": "^1.6.1",
    "happy-dom": "^12.10.0",
    "immer": "^10.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "keywords": [
    "state",
    "management",
    "react",
    "hooks",
    "zustand",
    "store"
  ]
}
